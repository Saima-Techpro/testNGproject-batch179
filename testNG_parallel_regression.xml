<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Regression Suite" verbose="1" parallel="classes" thread-count="4">
    <test name="Regression 1"   >
        <packages>
            <!--            running regression test in parallel-->
            <package name="myapp.*" />
        </packages>
    </test>
</suite>

        <!-- you can choose parallel="methods" if you want to do parallel testing on methods level-->